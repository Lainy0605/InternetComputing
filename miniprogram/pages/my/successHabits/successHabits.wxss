Page {
    width: 100%;
    height: 100%;
    background-color: white;
    background-color: rgba(255, 0, 0, 0.05);
    padding-top: 20rpx;
}

.initial{
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: gray;
    font-size: small;
    height: 1200rpx;
    width: 100%;
}

.head {
    font-size: large;
    /* background-color: #eba13e double; */
    text-align: center;
    font-weight: bold;
    color: #09699E;
    color: tomato;
    color: red;
    /* color: #3DADEB; */
}

.display-area {
    margin-top: 10rpx;
    align-self: center;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 98%;
    height: auto;
    border-color: #CDF46E;
    border-width: 5rpx;
    border-style: solid;
    border-style: hidden;
    border-radius: 15rpx;
}

.medal {
    position: relative;
    width: 245rpx;
    height: 250rpx;
    width: 1/3;
    
}

.habitsTitle {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 78rpx;
    width: 245rpx;
    height: 80rpx;
    font-size: 22rpx;
    color: white;
}

.time {
    position: absolute;
    top: 200rpx; 
    left: 30rpx;
