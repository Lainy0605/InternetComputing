/* pages/my/successHabits/successHabits.wxss */

Page {
    width: 100%;
    height: 100%;
    background-color: white;
}

.head {
    font-size: large;
    background-color: #eba13e double;
    text-align: center;
}

.display-area {
    margin-top: 10rpx;
    align-self: center;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 98%;
    height: auto;
    border-color: #CDF46E;
    border-width: 5rpx;
    border-style: solid;
    border-radius: 15rpx;
}

.medal {
    position: relative;
    width: 245rpx;
    height: 250rpx;
}

.habitsTitle {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 78rpx;
    width: 245rpx;
    height: 80rpx;
    font-size: 22rpx;
    color: white;
}

.time {
    position: absolute;
    top: 200rpx;
    left: 30rpx;
    font-size: xx-small;
}