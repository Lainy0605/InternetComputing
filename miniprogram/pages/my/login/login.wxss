/* pages/login/login.wxss */
page { 
    background-color: #ffffff; 
} 

.top{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 350rpx;
    background-color: #CDF46E;
}
.rules{
    position: absolute;
    top: 10rpx;
    right: 25rpx;
    height: 70rpx;
    width: 70rpx;
}
.avatar{
    display: flex;
    width: 30%;
    height: 100%;
    align-items: center;
    position: relative;
    margin: 0 30rpx 0 0;
}
.image{
    display: flex;
    width: 100px;
    height: 100px;
    border-radius: 100%;
    position: absolute;
    right: 0;
}
.info{
    display: flex;
    flex-wrap: wrap;
    font-size: 25rpx;
    width: 350rpx;
    color: white;
    align-items: center;
    flex-direction: column;
    position: relative;
}
.nickName{
    position: absolute;
    left: 0;
    top: 30%;
    font-size: 30rpx;
    color: black;font-weight: 700;
}
.need{
    position: absolute;
    font-size: 20rpx;
    left: 0;
    top: 48%;
}
.level{
    position: absolute;
    left: 0;
    top: 55%;
    font-style: oblique;
    font-size: 25rpx;
}

.credits{
    position: absolute;
    left: 0;
    top: 65%;
    font-style: oblique;
    font-size: 25rpx;
}
.login{
    display: flex;
    align-items: center;
    color: white;
    font-size: 30rpx;
}
.show-area{
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    margin-top: 50rpx;
    font-size: 30rpx;
    width: 94%;
    align-self: center;
}

.item{
    display: flex;
    width: 99%;
    height: 80rpx;
    margin-bottom: 20rpx;
    align-items: center;
    border-color: #EBA13E;
    border-width: 5rpx;
    border-style:solid;
    border-radius: 15rpx;
}
.number{
    display: flex;
    width: 50rpx;
    margin-left: 20rpx;
    justify-content: center;
    align-items: center;
}
.text{
    display: flex;
    width: 100rpx;
    justify-content: center;
    align-items: center;
}

.ing{
    color:white;
    display: flex;
    width: 150rpx;
    font-weight: 800;
    justify-content: center;
    align-items: center;
    background-color:#F5E952;
    border-radius: 10rpx;
}

.success{
    color:white;
    display: flex;
    width: 150rpx;
    font-weight: 800;
    justify-content: center;
    align-items: center;
    background-color:#CDF46E;
    border-radius: 10rpx;
}
.failure{
    color:white;
    display: flex;
    width: 150rpx;
    font-weight: 800;
    justify-content: center;
    align-items: center;
    background-color:tomato;
    border-radius: 10rpx;
}
.more{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 4%;
}
.jumpSetModal{
    width: 70%;
    position: fixed;
    top: 404rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: rgb(252, 250, 228);
    border-radius: 10rpx;
    border-style: solid;
    border-width: 2rpx;
    border-color: darkorange;
    border-width: 4rpx;
    border-color: tomato;
    display: flex;
    align-items: center;
}
.jumpSetBox{
    align-items: center;
    justify-content: center;
}
.m-title{
    display: flex;
    font-size:larger;
    font-weight: bold;
    color: darkorange;
    color: tomato;
    justify-content: center;
    margin-top: 4%;
}
.m-content{
    color: darkred;
    display:flex;
    justify-content: center;
    margin: 3% 8% 8% 8%;
    word-wrap: break-word;
    letter-spacing: normal;
    line-height: 150%;
}
.m-control{
    display: flex;
    border-top: 1rpx darkorange solid;
    border-top: 4rpx tomato solid;
}
.m-confirm{
    padding-left:2%;
    padding-right: 2%;
    white-space: nowrap;
    border-radius: 0;
    /* background-color: darkorange; */
    background-color: tomato;
    color:white;
}