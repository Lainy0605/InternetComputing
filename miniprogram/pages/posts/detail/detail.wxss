page{
    background-color: #ffffff;
}
.message{
    display: flex;
    flex-direction:row;
    padding: 20rpx 20rpx 40rpx 20rpx;
}
.face-img{
    width: 100rpx;
    height: 100rpx;
    margin-top: 10rpx;
    border-radius: 10rpx;
}
.left{
    margin-right: 15rpx;
}
.right{
    width: 600rpx;
}
.nickName{
    color: #586894;
    font-weight: 550;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}
.time-delete{
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    margin: 10rpx 0rpx 10rpx 0rpx;
}
.time{
    color: #7f7f7f;
    margin-right: 20rpx;
}
.delete{
    color: #586B94;
}
.interaction{
    display: flex;
    flex-direction: row;
    color: #7f7f7f;
    margin: 10rpx 0rpx 10rpx 0rpx;
    position: relative;
}
.interaction-comment{
    display: flex;
    flex-direction: row;
    align-items: center;
    left: 275rpx;
    position:absolute;
}
.interaction-like{
    display: flex;
    flex-direction: row;
    align-items: center;
    left: 520rpx;
    position:absolute;
}
.interaction-icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.numbers{
    font-size: 25rpx;
}
.images-wrap{
    margin-top: 10rpx;
}
.image-1{
    width: 400rpx;
    height: 500rpx;
}
.comment-area{
    display: flex;
    flex-direction: row;
    background-color: #f7f7f7;
    padding: 20rpx 20rpx;
    margin: 0rpx 20rpx;
}
.comment-icon{
    width: 45rpx;
    height: 45rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}
.comment{
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}
.comment-avator{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-top: 5rpx;
}
.nickname-time{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 520rpx;
}
.comment-nickname{
    color: #586894;
}
.comment-time{
    color: #7f7f7f;
    font-size: 25rpx;
}
.comment-text{
    width: 500rpx;
    word-wrap: break-word;
}
.take-comment{
    background-color: #f7f7f7;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0;
}
.take-comment-left{
    background-color: #ffffff;
    color: #7f7f7f;
    border-radius: 10rpx;
}
.input-comment{
    padding: 10rpx 20rpx;
    width: 500rpx;
}
.send-comment{
    margin-left: 20rpx;
    border: solid 1rpx #7f7f7f;
    border-radius: 10rpx;
    padding:10rpx 20rpx;
    color: #7f7f7f;
}