<view class="message">
    <view class="left">
        <image class="face-img" src="{{postDetail.avatar}}"></image>
    </view>
    <view class="right">
        <view class="nickName">{{postDetail.nickName}}</view>
        <view>{{postDetail.text}}</view>
        <view class="images-wrap">
            <block wx:for="{{postDetail.imgList}}" wx:key="this">
                <image src="{{item}}" class="image-1"></image>
            </block>
        </view>
        <view class="time-delete">
            <view class="time">{{postDetail.time}}</view>
            <view class="delete" wx:if="{{openId==postDetail._openid}}" bindtap="deletePost">删除</view>
        </view>
        <view class="interaction">
            <view class="interaction-word">
                <image src="../../../images/1.png" class="interaction-icon"></image>
                <view>分享</view>
            </view>
            <view class="interaction-word">
                <image src="../../../images/1.png" class="interaction-icon"></image>
                <view>评论</view>
            </view>
            <view class="interaction-word">
                <image src="../../../images/1.png" class="interaction-icon"></image>
                <view>点赞</view>
            </view>
        </view>
    </view>

</view>
<view class="comment-area" wx:if="{{postDetail.commentList.length!=0}}">
    <view class="comment-left">
        <image src="../../../images/1.png" class="comment-icon"></image>
    </view>
    <view class="comment-right">
        <block wx:for="{{postDetail.commentList}}" wx:key="this">
            <view class="comment">
                <image src="{{item.avatar}}" class="comment-avator"></image>
                <view>
                    <view class="nickname-time">
                        <view class="comment-nickname">{{item.nickName}}</view>
                        <view class="comment-time">{{item.time}}</view>
                    </view>
                    <view class="comment-text">{{item.text}}</view>
                </view>
            </view>
        </block>
    </view> 
</view>
<view style="height:200rpx"></view> <!--为下面的输入框留白防止遮挡-->
<view class="take-comment">
    <view class="take-comment-left">
        <input class="input-comment" placeholder="评论" bindinput="getValue"/>
    </view>
    <view class="send-comment" bindtap="send">发送</view>
</view>
