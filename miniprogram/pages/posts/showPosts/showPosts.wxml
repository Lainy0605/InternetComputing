<block wx:if="{{openId}}">
<view class="new-post" bindtap="toPagenewPost">
    <image src="../../../images/发布.png" class="new-post-icon"></image>
</view>

<block wx:for="{{postList}}" wx:key="this">
    <view class="message" >
        <view class="left">
            <image class="face-img" src="{{item.avatar}}"></image>
        </view>
        <view class="right">
            <view class="nickname" bindtap="toDetail" data-id="{{item._id}}">{{item.nickName}}</view>
            <view bindtap="toDetail" data-id="{{item._id}}">{{item.text}}</view>
            <view class="images-wrap">
                <block wx:if="{{item.imgList.length == 1}}" wx:for="{{item.imgList}}" wx:key="this" wx:for-item="imgItem">
                    <image src="{{imgItem}}" class="image-1"></image>
                </block>
                <block wx:if="{{item.imgList.length == 2 || item.imgList.length==3}}" wx:for="{{item.imgList}}" wx:key="this" wx:for-item="imgItem">
                    <image src="{{imgItem}}" class="image-2-3"></image>
                </block>
                <block wx:if="{{item.imgList.length == 4}}" wx:for="{{item.imgList}}" wx:key="this" wx:for-item="imgItem">
                    <image src="{{imgItem}}" class="image-4"></image>
                </block>
                <block wx:if="{{item.imgList.length>=5}}" wx:for="{{item.imgList}}" wx:key="this" wx:for-item="imgItem">
                    <image src="{{imgItem}}" class="image-5-9"></image>
                </block>
            </view>
            <view class="time-delete">
                <view class="time">{{item.time}}</view>
                <view class="delete" wx:if="{{openId==item._openid}}" bindtap="deletePost" data-index="{{index}}">删除</view>
            </view>
            <view class="interaction">
                <view> <!--不能删-->
                    <button open-type="share" size="mini" data-index="{{index}}"><image src="../../../images/分享.png" class="interaction-icon"></image></button>
                </view>
                <view class="interaction-comment">
                    <image src="../../../images/评论.png" class="interaction-icon" bindtap="toDetail" data-id="{{item._id}}"></image>
                    <view wx:if="{{item.commentList.length}}" class="numbers">{{item.commentList.length}}</view> <!--评论-->
                </view>
                <view class="interaction-like">
                    <image wx:if="{{!item.like}}" src="../../../images/点赞.png" class="interaction-icon" bindtap="like" data-index="{{index}}"></image>
                    <image wx:else src="../../../images/已点赞.png" class="interaction-icon" bindtap="dislike" data-index="{{index}}"></image>
                    <view wx:if="{{item.likeList.length}}" class="numbers">{{item.likeList.length}}</view><!--点赞-->
                </view>
            </view>
        </view>
    </view>
</block>
</block>
<block wx:if="{{!openId}}">请先登录</block>
